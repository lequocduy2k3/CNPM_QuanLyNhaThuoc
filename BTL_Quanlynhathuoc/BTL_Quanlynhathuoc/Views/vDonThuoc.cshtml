        <td>${donthuoc.dngaygiaohang}</td>
        <td>${donthuoc.sdiachigh}</td>
        <td class="action-buttons">
            <button class="btn btn-secondary" onclick="onUpdate('${donthuoc.smahd}')">Sửa</button>
